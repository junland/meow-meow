# Build script for binutils.
# SPDX-License-Identifier: Apache-2.0

version=2.38

cd -- "$TMPDIR"

rm -rf binutils-${version}
unpack "${worktree}/sources/binutils-${version}.tar.xz"

# Build instructions
cd binutils-${version}

# Make symlinks for lib64
ln -s lib "${crossdir}/lib64"

# Build in a separate directory
rm -rf ../binutils-build
mkdir ../binutils-build
cd ../binutils-build

../binutils-${version}/configure \
    AR="ar" \
    AS="as" \
    CC="$BTCC" \
    CXX="$BTCXX" \
    CFLAGS="$BTCFLAGS" CXXFLAGS="$BTCXXFLAGS" LDFLAGS="$BTLDFLAGS" \
    --prefix="$crossdir" \
    --host=$host \
    --target=$target \
    --with-sysroot="${sysrootdir}" \
    --disable-shared \
    --disable-multilib \
    --disable-nls \
    --disable-ppl-version-check \
    --disable-cloog-version-check \
    $multilib_options

make -j${jobs} configure-host
make -j${jobs}
make -j${jobs} install

cd -- "$TMPDIR"

cleanup() {
    rm -rf binutils-${version} binutils-build
}