# Build script for m4.
# SPDX-License-Identifier: Apache-2.0
# SPDX-FileCopyrightText: 2025, John Unland

version=1.4.19

cd -- "$TMPDIR"

rm -rf m4-${version}
unpack "${worktree}/sources/m4-${version}.tar.gz"

# Build instructions
cd m4-${version}

./configure \
    --prefix=/usr \
    --host=$target \
    --build=$(build-aux/config.guess)

make -j${jobs}

make DESTDIR="${LFS}" install

cleanup() {
    cd -- "$TMPDIR" && rm -rf m4-${version}
}
