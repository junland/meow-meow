version=3.12.6

cd -- "$TMPDIR"

rm -rf Python-$version

unpack "${worktree}/sources/Python-$version.tar.xz"

cd Python-$version

./configure \
    --prefix=/usr \
    --enable-shared \
    --without-ensurepip

echo "Done configuring Python-$version"

make -j${jobs}

echo "Done building Python-$version"

make -j${jobs} install

echo "Done installing Python-$version"

cleanup() {
    cd -- "$TMPDIR" && rm -rf Python-$version
}
