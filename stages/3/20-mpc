# Build script for mpc.
# SPDX-License-Identifier: Apache-2.0
# SPDX-FileCopyrightText: 2025, John Unland

version=1.3.1

cd -- "$TMPDIR"

rm -rf mpc-$version

unpack "${worktree}/sources/mpc-$version.tar.gz"

cd mpc-$version

./configure --prefix=/usr \
    --disable-static \
    --docdir=/usr/share/doc/mpc-${version}

make -j${jobs}

make check -j${jobs}

make install

if [ "$CLEANUP" == true ]; then
    cd -- "$TMPDIR" && rm -rf mpc-$version
fi
