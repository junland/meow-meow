#
# powerpc64le: PowerPC64 (for Talos II systems).
#

kernel_arch=powerpc
libc_arch=powerpc64

multilib_options="--disable-multilib --with-multilib-list="
gcc_options="--enable-decimal-float=no --with-abi=elfv2"

target=powerpc64le-${VENDOR}linux-gnu

# Define architecture for the package manager
package_arch=ppc64le
