version=4.4.1

cd -- "$TMPDIR"

rm -rf make-$version
unpack "${worktree}/sources/make-$version.tar.gz"

cd make-$version

./configure \
    --prefix=/usr \
    --host=$target \
    --build=$host \
    --without-guile

make -j${jobs}

make -j${jobs} DESTDIR="${LFS}" install

cleanup() {
    cd -- "$TMPDIR" && rm -rf make-$version
}