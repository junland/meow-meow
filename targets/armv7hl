#
# armv7hl: ARM hardfloat v7 (FPU neon).
#

kernel_arch=arm
libc_arch=arm

multilib_options="--disable-multilib --with-multilib-list="
gcc_options="--with-arch=armv7-a --with-float=hard --with-fpu=neon"

target=armv7hl-${VENDOR}linux-musleabihf

# Define architecture for the package manager
package_arch=armhl
