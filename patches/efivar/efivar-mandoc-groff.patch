From 1f310c1814ab0dde06a1a66da847b6c75a1dab2e Mon Sep 17 00:00:00 2001
From: DustDFG <dfgdust@gmail.com>
Date: Mon, 28 Feb 2022 10:11:09 +0000
Subject: [PATCH] Use groff as 'MANDOC'

Signed-off-by: DustDFG <dfgdust@gmail.com>
---
 src/include/defaults.mk | 2 +-
 src/include/rules.mk    | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/src/include/defaults.mk b/src/include/defaults.mk
index 632b155..1c88da1 100644
--- a/src/include/defaults.mk
+++ b/src/include/defaults.mk
@@ -111,7 +111,7 @@ NM	:= $(CROSS_COMPILE)$(COMPILER)-nm
 RANLIB	:= $(CROSS_COMPILE)$(COMPILER)-ranlib
 ABIDW	:= abidw
 ABIDIFF := abidiff
-MANDOC	:= mandoc
+MANDOC	:= groff
 
 LDLIBS=$(foreach lib,$(LIBS),-l$(lib)) $(call pkg-config-ldlibs)
 
diff --git a/src/include/rules.mk b/src/include/rules.mk
index f309f86..a2f0cca 100644
--- a/src/include/rules.mk
+++ b/src/include/rules.mk
@@ -21,10 +21,10 @@ family = $(foreach FAMILY_SUFFIX,$(FAMILY_SUFFIXES),$($(1)_$(FAMILY_SUFFIX)))
 	$(AR) -cvqs $@ $^
 
 %.1 : %.1.mdoc
-	$(MANDOC) -mdoc -Tman -Ios=Linux $^ > $@
+	$(MANDOC) -mdoc -Tascii -Ios=Linux $^ > $@
 
 %.3 : %.3.mdoc
-	$(MANDOC) -mdoc -Tman -Ios=Linux $^ > $@
+	$(MANDOC) -mdoc -Tascii -Ios=Linux $^ > $@
 
 % : %.c
 
